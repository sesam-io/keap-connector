[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "namespaced_identifiers": false,
    "source": {
      "operation": "list",
      "payload_property": "{{@ endpoint @}}",
      "properties": {
        "datatype": "{{@ endpoint @}}"
      },
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "transform": {
      "rules": {
        "default": [
          [
            "copy",
            "*"
          ],
          [
            "add",
            "$last-modified",
            [
              "datetime-parse",
              "%Y-%m-%dT%H:%M:%S.%f%z",
              "_S.modification_date"
            ]
          ]
        ]
      },
      "type": "dtl"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "add_namespaces": false,
    "batch_size": 1,
    "compaction": {
      "keep_versions": 100
    },
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "create-payload": [
            [
              "copy",
              "*",
              [
                "list",
                "*"
              ]
            ],
            [
              "add",
              "contact_id",
              "_S.contact.id"
            ],
            [
              "add",
              "{{@ datatype @}}_date",
              "_S.{{@ datatype @}}_date"
            ],
            [
              "add",
              "{{@ datatype @}}_title",
              "_S.title"
            ],
            [
              "add",
              "{{@ datatype @}}_items",
              [
                "apply",
                "{{@ datatype @}}_items_cleanup",
                "_S.{{@ datatype @}}_items"
              ]
            ]
          ],
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "add",
              "$payload",
              [
                "apply",
                "create-payload",
                "_S."
              ]
            ]
          ],
          "{{@ datatype @}}_items_cleanup": [
            [
              "copy",
              [
                "list",
                "description",
                "price",
                "quantity"
              ]
            ],
            [
              "add",
              "product_id",
              "_S.product.id"
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "enable_deletes": true,
          "operation_delete_properties": {
            "datatype": "{{@ endpoint @}}"
          },
          "operation_insert_properties": {
            "datatype": "{{@ endpoint @}}"
          },
          "operation_lookup_properties": {
            "datatype": "{{@ endpoint @}}"
          },
          "primary_key": "id",
          "rest_system": "{{@ system @}}",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-share-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]