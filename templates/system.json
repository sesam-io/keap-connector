{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "insert": {
      "id_expression": "{{ id }}",
      "method": "POST",
      "url": "{{ properties.datatype }}"
    },
    "list-companies": {
      "id_expression": "{{ id }}",
      "method": "GET",
      "payload_property": "companies",
      "url": "{{ properties.datatype }}"
    },
    "lookup": {
      "id_expression": "{{ id }}",
      "method": "GET",
      "url": "{{ properties.datatype }}/{{ entity.id }}"
    },
    "update": {
      "method": "PATCH",
      "url": "{{ properties.datatype }}/{{ entity.id }}"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://api.infusionsoft.com/crm/rest/v1/%s",
  "verify_ssl": true
}